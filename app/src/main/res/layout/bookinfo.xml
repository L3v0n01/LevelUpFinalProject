<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="30dp"
    android:paddingEnd="30dp">

      <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/info"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:text="BOOKS INFO"
        android:textColor="#0F1010"
        android:textSize="28dp"
        android:paddingTop="25dp"
        android:layout_marginTop="1dp"
        android:gravity="left"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/bookimage"
        android:layout_width="110dp"
        android:layout_height="170dp"
        android:textColor="#111112"
        android:textSize="25dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:background="@drawable/imagebook"
        app:layout_constraintTop_toBottomOf="@+id/info"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/bookName"
        android:layout_width="190dp"
        android:layout_height="70dp"
        android:text="Name: Movie Name"
        android:textColor="#111112"
        android:textSize="25dp"
        android:paddingStart="6dp"
        android:layout_marginTop="35dp"
        android:layout_marginLeft="20dp"
        android:background="@drawable/books_button"
        app:layout_constraintTop_toBottomOf="@+id/info"
        app:layout_constraintStart_toEndOf="@id/bookimage" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/authorInfo"
        android:layout_width="200dp"
        android:layout_height="39dp"
        android:textColor="#03080B"
        android:textSize="20dp"
        android:text="Author Name: Name"
        android:layout_marginLeft="20dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="0dp"
        android:gravity="left"
        app:layout_constraintTop_toBottomOf="@+id/bookName"
        app:layout_constraintStart_toEndOf="@id/bookimage" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/age"
        android:layout_width="200dp"
        android:layout_height="39dp"
        android:textColor="#03080B"
        android:textSize="20dp"
        android:text="Age Group: Number"
        android:layout_marginLeft="20dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="1dp"
        android:gravity="left"
        app:layout_constraintTop_toBottomOf="@+id/authorInfo"
        app:layout_constraintStart_toEndOf="@id/bookimage" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/price"
        android:layout_width="200dp"
        android:layout_height="39dp"
        android:textColor="#03080B"
        android:textSize="20dp"
        android:text="Price: $$"
        android:layout_marginLeft="20dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="1dp"
        android:gravity="left"
        app:layout_constraintTop_toBottomOf="@+id/age"
        app:layout_constraintStart_toEndOf="@id/bookimage" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/amazon"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="#111112"
        android:textSize="25dp"
        android:text="Amazon"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:background="@drawable/amazonlink"
        app:layout_constraintTop_toBottomOf="@+id/bookimage"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/apple"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="#111112"
        android:textSize="25dp"
        android:text="Apple Books"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:background="@drawable/amazonlink"
        app:layout_constraintTop_toBottomOf="@+id/amazon"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/amazonlogo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:textColor="#111112"
        android:textSize="25dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:background="@drawable/amazonlogo"
        app:layout_constraintTop_toBottomOf="@+id/bookimage"
        app:layout_constraintStart_toStartOf="@id/amazon" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/applelogo"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:textColor="#111112"
        android:textSize="25dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:background="@drawable/amazonlogo"
        app:layout_constraintTop_toBottomOf="@+id/amazon"
        app:layout_constraintStart_toStartOf="@id/applelogo" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/Booksmill"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="#111112"
        android:textSize="25dp"
        android:text="Books a Million"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:background="@drawable/amazonlink"
        app:layout_constraintTop_toBottomOf="@+id/apple"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/mill"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:textColor="#111112"
        android:textSize="25dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:background="@drawable/amazonlogo"
        app:layout_constraintTop_toBottomOf="@+id/apple"
        app:layout_constraintStart_toStartOf="@id/applelogo" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/indie"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="#111112"
        android:textSize="25dp"
        android:text="IndieBound"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:background="@drawable/amazonlink"
        app:layout_constraintTop_toBottomOf="@+id/mill"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/ind"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:textColor="#111112"
        android:textSize="25dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:background="@drawable/amazonlogo"
        app:layout_constraintTop_toBottomOf="@+id/mill"
        app:layout_constraintStart_toStartOf="@id/mill" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/Bookshop"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:textColor="#111112"
        android:textSize="25dp"
        android:text="Book Shop"
        android:layout_marginTop="50dp"
        android:gravity="center"
        android:background="@drawable/amazonlink"
        app:layout_constraintTop_toBottomOf="@+id/ind"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>