<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="38dp"
    android:paddingEnd="30dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/sells"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:text="Whatch our best sellers list"
        android:textColor="#0F1010"
        android:textSize="28dp"
        android:paddingTop="25dp"
        android:textStyle="italic"
        android:layout_marginTop="1dp"
        android:gravity="left"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/bookimage"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:textColor="#111112"
        android:textSize="25dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:background="@drawable/bestsellers"
        app:layout_constraintTop_toBottomOf="@+id/sells"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/bookName"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:text="Name: Movie Name"
        android:textColor="#111112"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@+id/bookimage"
        app:layout_constraintStart_toStartOf=""  />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/bookimage2"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:textColor="#111112"
        android:textSize="25dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:layout_marginLeft="30dp"
        android:background="@drawable/bestsellers"
        app:layout_constraintTop_toBottomOf="@+id/sells"
        app:layout_constraintStart_toEndOf="@id/bookimage"  />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/bookName2"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:text="Name: Movie Name"
        android:textColor="#111112"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintTop_toBottomOf="@+id/bookimage2"
        app:layout_constraintStart_toStartOf="@id/bookimage2"  />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/bookimage3"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:textColor="#111112"
        android:textSize="25dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:layout_marginLeft="30dp"
        android:background="@drawable/bestsellers"
        app:layout_constraintTop_toBottomOf="@+id/bookName"
        app:layout_constraintStart_toEndOf=""  />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/bookName3"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:text="Name: Movie Name"
        android:textColor="#111112"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintTop_toBottomOf="@+id/bookimage3"
        app:layout_constraintStart_toStartOf=""  />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/bookimage4"
        android:layout_width="150dp"
        android:layout_height="200dp"
        android:textColor="#111112"
        android:textSize="25dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:layout_marginLeft="30dp"
        android:background="@drawable/bestsellers"
        app:layout_constraintTop_toBottomOf="@+id/bookName2"
        app:layout_constraintStart_toEndOf="@id/bookimage3"  />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/bookName4"
        android:layout_width="150dp"
        android:layout_height="70dp"
        android:text="Name: Movie Name"
        android:textColor="#111112"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintTop_toBottomOf="@+id/bookimage4"
        app:layout_constraintStart_toStartOf="@id/bookimage4"  />

</androidx.constraintlayout.widget.ConstraintLayout>