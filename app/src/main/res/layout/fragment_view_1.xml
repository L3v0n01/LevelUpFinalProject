<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingStart="30dp"
    android:paddingEnd="30dp"
    android:background="@drawable/background">

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="16dp"
        android:gravity="start"
        android:src="@drawable/ic__000000000newww"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/Copyrighted"
        android:layout_width="200dp"
        android:layout_height="39dp"
        android:text="Copyrighted"
        android:textColor="#E1E3E4"
        android:textSize="20dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="30dp"
        android:gravity="left"
        app:layout_constraintTop_toBottomOf="@+id/logo"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/status"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:text="A PULSE PUNDING SUCCESS"
        android:textColor="#0F1010"
        android:textSize="28dp"
        android:paddingBottom="10dp"
        android:layout_marginTop="1dp"
        android:gravity="left"
        app:layout_constraintTop_toBottomOf="@+id/Copyrighted"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/booklib"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="@string/Books_Library"
        android:textColor="#111112"
        android:textSize="25dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:background="@drawable/books_button"
        app:layout_constraintTop_toBottomOf="@+id/status"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/bestsell"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="@string/best_sellers"
        android:textColor="#111112"
        android:textSize="25dp"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:background="@drawable/books_button"
        app:layout_constraintTop_toBottomOf="@+id/booklib"
        app:layout_constraintStart_toStartOf="parent" />



</androidx.constraintlayout.widget.ConstraintLayout>